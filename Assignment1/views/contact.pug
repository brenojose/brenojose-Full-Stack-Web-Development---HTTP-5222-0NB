extends base

block content
  .container.mt-5.animate__animated.animate__fadeIn
    h2.text-center.mt-4 Contact Us
    section.mt-4
      h2.text-center Contact Form
      .row.justify-content-center
        .col-md-8
          form(action='/contact/submit', method='post')
            .form-group
              label(for='name') Name:
              input.form-control(type='text', name='name', required)
            .form-group
              label(for='email') Email:
              input.form-control(type='email', name='email', required)
            .form-group
              label(for='message') Message:
              textarea.form-control(name='message', required)
            .form-group.text-center
              button.btn.btn-primary(type='submit') Send Message
    section.mt-5
      h2.text-center Our Location
      .row.justify-content-center
        .col-md-6.text-center
          p 123 Photography Lane, Photo City, PC 12345
          p Phone: (123) 456-7890
          p Email: info@photohaven.com
